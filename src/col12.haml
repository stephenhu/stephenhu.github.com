%div{:class => "row"}
  %div{:class => "col-lg-12 box"}
    - if contents[0][:picture]
      %img{:src => "#{contents[0][:link]}"}
    - else
      %a{:href => "#{contents[0][:link]}"}
        %h4{:class => "green"}= contents[0][:title]
      %date= contents[0][:created_at]
      %p= contents[0][:summary]

